%div{:class => css_class, :id => css_id}
  - unless items.empty?
    %ul.nav.nav-pills
      - items.each_with_index do |item, i|
        = render :partial => "/cms/menus/menu_item", :object => item, :locals => {:depth => 1, :position => i + 1, :item_count => items.length}

      %li.pull-right
        = link_to "RailsGirls.com", "http://railsgirls.com/", :target => "_blank"